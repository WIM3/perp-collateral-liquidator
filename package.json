{
  "name": "@perp/perp-collateral-liquidator",
  "version": "1.0.0",
  "description": "Perpetual Protocol Curie (V2) liquidator & contracts",
  "repository": {
    "type": "git",
    "url": "https://github.com/perpetual-protocol/perp-collateral-liquidator.git"
  },
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf typechain && rm -rf artifacts && rm -rf cache && rm -rf build",
    "typechain": "hardhat typechain && ts-node scripts/typeGen.ts",
    "build": "npm run build:contract && npm run typechain && npm run build:app",
    "build:contract": "hardhat compile --no-typechain",
    "build:app": "tsc -p tsconfig-build.json",
    "deploy-contract:optimism-goerli": "hardhat deploy --network opgoerli",
    "deploy-contract:optimism": "hardhat deploy --network optimism",
    "app:optimism-goerli": "ENV=optimism-goerli ts-node --files src/index.ts",
    "app:optimism": "ENV=optimism ts-node --files src/index.ts",
    "start:optimism-goerli": "ENV=optimism-goerli node build/src/index.js",
    "start:optimism": "ENV=optimism node build/src/index.js",
    "test": "hardhat test"
  },
  "dependencies": {
    "@chainlink/contracts": "0.1.7",
    "@openzeppelin/contracts": "3.4.1-solc-0.7-2",
    "@openzeppelin/contracts-upgradeable": "3.4.2",
    "@perp/curie-contract": "^2.8.3",
    "@perp/perp-oracle-contract": "0.6.7",
    "@perp/voting-escrow": "1.2.0",
    "@uniswap/v3-core": "https://github.com/Uniswap/uniswap-v3-core/tarball/v1.0.0",
    "@uniswap/v3-periphery": "1.0.1"
  },
  "devDependencies": {
    "@eth-optimism/smock": "1.1.4",
    "@ethereumjs/block": "3.3.0",
    "@ethereumjs/blockchain": "5.3.0",
    "@ethereumjs/common": "2.3.0",
    "@ethereumjs/tx": "3.2.0",
    "@ethereumjs/vm": "5.4.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@nomiclabs/ethereumjs-vm": "4.2.2",
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@openzeppelin/hardhat-upgrades": "1.10.0",
    "@typechain/ethers-v5": "7.0.0",
    "@typechain/hardhat": "2.0.1",
    "@types/chai": "4.2.18",
    "@types/json-stable-stringify": "1.0.33",
    "@types/lodash": "4.14.170",
    "@types/mocha": "9.0.0",
    "@types/node": "15.6.1",
    "bignumber.js": "9.0.1",
    "chai": "4.3.4",
    "dotenv": "^16.3.1",
    "eslint-config-prettier": "8.5.0",
    "ethereum-waffle": "3.4.0",
    "ethers": "5.6.1",
    "hardhat": "2.3.0",
    "hardhat-contract-sizer": "2.5.1",
    "hardhat-dependency-compiler": "1.1.1",
    "hardhat-deploy": "^0.11.37",
